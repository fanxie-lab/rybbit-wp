{
  "name": "rybbit/rybbit-analytics",
  "description": "Privacy-friendly, cookieless analytics for WordPress",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Rybbit",
      "homepage": "https://rybbit.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "classmap": [
      "includes/"
    ]
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=WordPress includes/ rybbit-analytics.php",
    "phpcbf": "phpcbf --standard=WordPress includes/ rybbit-analytics.php",
    "phpstan": "phpstan analyse includes/ --level=5"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
